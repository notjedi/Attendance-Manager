<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/subject_card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/subject_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:fontFamily="@font/raleway_semibold"
                android:maxLines="2"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/subject_attendance_progressbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Maths" />

            <TextView
                android:id="@+id/total_classes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/rubik"
                app:layout_constraintBottom_toTopOf="@id/total_text"
                app:layout_constraintEnd_toEndOf="@id/total_text"
                app:layout_constraintStart_toStartOf="@id/total_text"
                app:layout_constraintTop_toBottomOf="@id/subject_name"
                tools:text="50" />

            <TextView
                android:id="@+id/attended_classes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/rubik"
                app:layout_constraintBottom_toTopOf="@id/attended_text"
                app:layout_constraintEnd_toEndOf="@id/attended_text"
                app:layout_constraintStart_toStartOf="@id/attended_text"
                app:layout_constraintTop_toBottomOf="@id/subject_name"
                tools:text="30" />

            <TextView
                android:id="@+id/can_bunk_classes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/rubik"
                app:layout_constraintBottom_toTopOf="@id/can_bunk_text"
                app:layout_constraintEnd_toEndOf="@id/can_bunk_text"
                app:layout_constraintStart_toStartOf="@id/can_bunk_text"
                app:layout_constraintTop_toBottomOf="@id/subject_name"
                tools:text="5" />

            <TextView
                android:id="@+id/total_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/rubik"
                android:text="@string/total"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/attended_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/rubik"
                android:text="@string/attended"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/total_text"
                tools:text="Attended" />

            <TextView
                android:id="@+id/can_bunk_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/rubik"
                android:text="@string/can_bunk"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/attended_text"
                tools:text="Can Bunk" />

            <ProgressBar
                android:id="@+id/subject_attendance_progressbar"
                android:layout_width="88dp"
                android:layout_height="76dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:indeterminateOnly="false"
                android:progress="50"
                android:progressDrawable="@drawable/circular_progress_bar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/subject_progressbar_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_semibold"
                app:layout_constraintBottom_toBottomOf="@id/subject_attendance_progressbar"
                app:layout_constraintEnd_toEndOf="@id/subject_attendance_progressbar"
                app:layout_constraintStart_toStartOf="@id/subject_attendance_progressbar"
                app:layout_constraintTop_toTopOf="@id/subject_attendance_progressbar"
                tools:text="75%" />

            <ImageButton
                android:id="@+id/cancelled_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_button_bg"
                android:backgroundTint="#F69E5B"
                android:contentDescription="@string/class_cancelled"
                android:drawablePadding="16dp"
                android:src="@drawable/ic_minus"
                android:tint="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/bunked_button"
                app:layout_constraintTop_toBottomOf="@id/subject_attendance_progressbar" />

            <ImageButton
                android:id="@+id/bunked_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_button_bg"
                android:backgroundTint="#F62300"
                android:contentDescription="@string/bunked_class"
                android:src="@drawable/ic_cancel"
                android:tint="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/attended_button"
                app:layout_constraintTop_toBottomOf="@id/subject_attendance_progressbar" />

            <ImageButton
                android:id="@+id/attended_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_button_bg"
                android:backgroundTint="#32F38F"
                android:contentDescription="@string/attended_class"
                android:src="@drawable/ic_check"
                android:tint="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/subject_attendance_progressbar" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>